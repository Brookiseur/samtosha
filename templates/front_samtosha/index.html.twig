{% extends 'base.html.twig' %}

{% block title %}Samtosha{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/styles-front-samtosha.min.css') }}">
{% endblock %}

{% block main %}
<div class="imageAccueil">
        <img src="{{asset('images/samtosha/leaaccueil.png')}}" alt="" >
        <span class="proverbe">"Je vais creuser la montagne. " - Jacques Brenner</span>
</div>
<div class='container'>
    <div class='coursAccueil'>
        <div class="collectif">
            <div class="imageCollectif">
                <img src="{{asset('images/samtosha/collectif.png')}}" alt='photos cours collectifs'>
            </div>
            <h3>Cours Collectifs</h3>
        </div>
        <div class="prive">
            <div class="imagePrive">
            <img  src="{{asset('images/samtosha/prive.png')}}" alt='photos cours prive'>
            </div>
            <h3>Cours Privés</h3>
        </div>
        <div class="evenements">
            <div class="imageEvenements">
                <img src="{{asset('images/samtosha/evenements.png')}}" alt='photos evenements'> 
            </div>
            <h3>Evènements</h3>
        </div>
    </div>
    <div class="line"></div>
    <div class="actualiteAccueil">
        <h1>Actualités</h1>
        <div class="actuContainer">
            {% for i, actu in last4Actu %}
            <div class="actuCard">
                {% if actu.imageName is not null %}
                <div class="imageCard">
                    <img src="{{ asset('images/evenements/' ~ actu.imageName)}}" alt='{{actu.title}}' class='actuImage'>
                </div>
                <div class="infoCard">
                    <h4>{{actu.title}}</h4>
                    <p>{{actu.description}}</p>
                    {% if actu.startEvent|date('d') == actu.endEvent|date('d')%}
                    <p>Rendez vous le {{ actu.startEvent|date('d/m/Y')}} de {{actu.startEvent|date('H:i')}} à {{actu.endEvent|date('H:i')}}</p>
                    {% else %}
                    <p>Rendez vous du {{ actu.startEvent|date('d/m/Y')}} à {{actu.startEvent|date('H:i')}} au {{ actu.endEvent|date('d/m/Y')}} à {{actu.endEvent|date('H:i')}}</p>
                    {% endif %}
                    à
                    {% if actu.location is not null %}
                    <p> {{actu.location }} </p>
                    {% endif %}
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="line"></div>
    <div class="temoignageAccueil">
<h1>Témoignages</h1>
<div class="actuContainer">
    {% for i, actu in last4Actu %}
    <div class="actuCard">
        <div class="infoCard">
            <h4>{{actu.title}}</h4>
            <p>{{actu.description}}</p>
        </div>
    </div>
    {% endfor %}
</div>
</div>
    <div class="temoignagesAccueil">
        <h1>Témoignages</h1>
        <div class="temoignages1">
            <div class="tem1">tem1</div>
            <div class="tem2">tem2</div>
        </div>
        <div class="temoignages2">
            <div class="tem3">tem3</div>
            <div class="tem4">tem4</div>
        </div>
        <div class="temoignages3">
            <div class="tem5">tem5</div>
            <div class="tem6">tem6</div>
        </div>
    </div>
</div>
{% endblock %}
